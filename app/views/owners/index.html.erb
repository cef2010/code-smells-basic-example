<%= link_to 'Cats', cats_path %>
<p id="notice"><%= notice %></p>

<h1>Listing Owners</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @owners.each do |owner| %>
<div class="owner-view">
      <%= owner.first_name %> <%= owner.last_name %><br>
      <%= owner.age %>, <%= owner.race %><br>
      <%= owner.location %><br>
      <%= link_to 'Show', owner %>
      <%= link_to 'Edit', edit_owner_path(owner) %>
      <%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
      <% end %>
    </tbody>
  </table>

<br>
<div>
<%= link_to 'New Owner', new_owner_path %>
</div>
